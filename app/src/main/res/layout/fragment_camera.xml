<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.CameraFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/camera_title" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <androidx.camera.view.PreviewView
                android:id="@+id/cameraPreview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp"
                app:scaleType="fillCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/camera_instruction"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLightWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ Cahaya terlalu gelap!"
                android:textColor="#FFFFFF"
                android:background="#B3FF0000"
                android:padding="12dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/takePhotoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/camera_take_photo_button" />

            <Button
                android:id="@+id/uploadButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera_upload_button" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvProcessingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tahan posisi, sedang memproses..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#99000000"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:visibility="gone"
            app:drawableTopCompat="@drawable/ic_check"
            android:elevation="10dp"/>
    </FrameLayout>

</LinearLayout>